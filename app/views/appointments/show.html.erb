<h2>Appointments</h2>

<ul>
    <% @appointments.each do |appointment| %>
        <li><%= appointment.appointment_datetime.to_formatted_s(:long) %>
        <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %>
        <%= link_to appointment.patient.name, patient_path(appointment.patient) %></li>
    <% end %>
</ul>