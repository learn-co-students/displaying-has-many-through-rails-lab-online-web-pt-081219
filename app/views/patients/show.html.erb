<h1><%= @patient.name %> </h1>
<h3><%= @patient.age %> years old</h3>

<ul>
  <% @patient.appointments.each do |appt| %>
    <li>
      <%= link_to appt.doctor.name, doctor_path(appt.doctor) %> -
      <%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %>
    </li>
  <% end %>
</ul>
