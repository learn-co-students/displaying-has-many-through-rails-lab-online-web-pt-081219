<h2><%= @doctor.name %></h2>
<h3><%= @doctor.department %></h3>

<ul>
    <% @doctor.appointments.each do |appointment| %>
        <li><%= link_to appointment.patient.name, patient_path(appointment.patient) %>
        <%= appointment.appointment_datetime.strftime("%A, %B %d, %Y") %><%= appointment.appointment_datetime.strftime(" at %H:%M") %></li>
    <% end %>
</ul>