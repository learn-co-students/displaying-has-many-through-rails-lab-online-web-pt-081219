<h1><%= @doctor.name %></h1>
<h3>Department: <%= @doctor.department %></h3>
<br />

<% @doctor.appointments.each do |appt| %>
    - - - - - - - - - - - - - - - - - - - - 
    <p>
        <h4><%= link_to appt.patient.name, patient_path(appt.patient) %></h4>
        <%= appt.appointment_datetime.strftime("%B %d, %Y at %R") %>
    </p>

<% end %>