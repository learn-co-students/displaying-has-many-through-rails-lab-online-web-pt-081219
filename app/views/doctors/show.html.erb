<h1><%= @doctor.name %></h1>
<h3><%= @doctor.department %></h3><br>

<h2>Schedule:</h2>

<ul>
  <% @doctor.appointments.each do |appt| %>
  <li><%= link_to appt.patient.name, patient_path(appt.patient) %><br>
  <%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appt) %></li>
  <% end %>
</ul>
